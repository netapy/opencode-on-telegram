# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=

# OpenCode/Anthropic API Key
ANTHROPIC_API_KEY=

# OpenCode server port (optional)
OPENCODE_PORT=4097

# Default session directory (optional, defaults to ~/)
OPENCODE_DEFAULT_DIR=

# MCP config (JSON, optional)
OPENCODE_MCP_CONFIG=

# OpenAI API key (enables voice/audio transcription via Whisper AND registers with OpenCode for GPT models)
OPENAI_API_KEY=

# Allowed Telegram user IDs (comma-separated, REQUIRED for security)
# Get your user ID from @userinfobot on Telegram
# Example: ALLOWED_USER_IDS=123456789,987654321
ALLOWED_USER_IDS=

# SQLite database path (optional, defaults to ./opencode-telegram.db)
OPENCODE_DB_PATH=
