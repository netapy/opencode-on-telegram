{
  "name": "opencode-on-telegram",
  "version": "0.1.0",
  "description": "Run OpenCode AI assistant through Telegram with streaming support",
  "type": "module",
  "module": "src/index.ts",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "start": "bun run src/index.ts",
    "typecheck": "bun x tsc --noEmit",
    "compile": "bun build --compile --minify src/index.ts --outfile opencode-telegram",
    "compile:linux": "bun build --compile --minify --target=bun-linux-x64 src/index.ts --outfile opencode-telegram-linux",
    "compile:linux-arm": "bun build --compile --minify --target=bun-linux-arm64 src/index.ts --outfile opencode-telegram-linux-arm",
    "compile:windows": "bun build --compile --minify --target=bun-windows-x64 src/index.ts --outfile opencode-telegram.exe",
    "compile:all": "bun run compile && bun run compile:linux && bun run compile:linux-arm && bun run compile:windows"
  },
  "keywords": ["opencode", "telegram", "ai", "streaming", "bot"],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@opencode-ai/sdk": "latest",
    "grammy": "^1.30.0",
    "@grammyjs/auto-retry": "^2.0.2",
    "@grammyjs/parse-mode": "^1.10.0",
    "telegramify-markdown": "^1.3.2"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.6.0"
  }
}
